" hilighting code display
syntax on

" choose the theme vim vill used
colorscheme darkblue

" higlighting the search result
set hlsearch

" table key for 4 blank
set ts=4

" show line number
set number

" auto indent
set autoindent



" key map & plugin settings
" nnoremap <silent> <F5> :NERDTree<CR>

" hotkey for NerdTree
map <C-n> :NERDTreeToggle<CR>

" for supporting kinds of encoding
set fileencodings=utf-8,ucs-bom,gb18030,gbk,gb2312,cp936
set termencoding=utf-8
set encoding=utf-8
